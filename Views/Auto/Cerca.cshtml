@model ghinelli.johan._5h.Ecommerce.Models.Auto

@{
    ViewData["Title"] = "Cerca";
}

<h1>Cerca Auto</h1>

<h4>Auto</h4>
<hr />
<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bookmark-check" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M10.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0"/>
  <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1z"/>
</svg>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Modello" class="control-label"></label>
                <input asp-for="Modello" class="form-control" />
                <span asp-validation-for="Modello" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marca"></label>
                <select type="text" asp-for="Marca" class="form-control">
                    <option>BMW</option>
                    <option>Mercedes-Benz</option>
                    <option>Toyota</option>
                    <option>Honda</option>
                    <option>Audi</option>
                    <option>Porsche</option>
                    <option>Hyundai</option>
                    <option>Tesla</option>
                </select>
                <span asp-validation-for="Marca" />
            </div>
            <div>
                <label for="dob">Anno:</label>
                <input type="date" name="dob" id="dob" />
            </div>
            <div class="form-group">
                <label asp-for="Cilindrata"></label>
                <select type="text" asp-for="Cilindrata" class="form-control">
                <option>500 CC</option>
                <option>600 CC</option>
                <option>700 CC</option>
                <option>800 CC</option>
                <option>900 CC</option>
                <option>1000 CC</option>
                <option>1100 CC</option>
                <option>1200 CC</option>
                <option>1300 CC</option>
                <option>1400 CC</option>
                <option>1500 CC</option>
                <option>1600 CC</option>
                <option>1700 CC</option>
                <option>1800 CC</option>
                <option>1900 CC</option>
                <option>2000 CC</option>
                </select>
                <span asp-validation-for="Cilindrata" />
            </div>
            <div class="form-group">
                <label asp-for="Prezzo" class="control-label"></label>
                <input asp-for="Prezzo" class="form-control" />
                <span asp-validation-for="Prezzo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chilometraggio" class="control-label"></label>
                <input asp-for="Chilometraggio" class="form-control" />
                <span asp-validation-for="Chilometraggio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cerca" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Torna alla pagina iniziale</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
